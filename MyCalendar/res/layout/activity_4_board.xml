<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_background"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="@drawable/board_back"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/board_back"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/Board_OneLineBoard_ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/board_back_1"
                android:cacheColorHint="#00000000"
                android:divider="#b9c7e2"
                android:dividerHeight="1dp"
                android:listSelector="#00000000"
                android:padding="10dp" >

            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:padding="10dp" >

            <EditText
                android:id="@+id/Board_OneLineBoard_Content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:maxLength="30"
                android:singleLine="true"
                android:textSize="10pt"
                android:textStyle="bold" >

                <requestFocus />
            </EditText>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/Board_OneLineBoard_Submit"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:background="@drawable/button_selector"
                    android:text="@string/bt_submit"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>