<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.ac.hyu.kangdaecheol.calendar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.NoActionBar" >
        <activity
            android:name=".activity.MainActivity_"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MonthlyActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.WeeklyActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ScheduleActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddScheduleActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ModifyScheduleActivity_"
            android:screenOrientation="portrait" />
    </application>

</manifest>